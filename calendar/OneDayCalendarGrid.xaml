        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Margin="0,0,0,35" Grid.RowSpan="2">
            <Label x:Name="DayOfWeek" HorizontalAlignment="Center" FontSize="26" Height="55" Margin="267,0" Content="Название дня недели"/>
